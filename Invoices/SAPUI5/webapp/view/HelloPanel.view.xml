<mvc:View controllerName="logaligroup.SAPUI5.controller.HelloPanel"
    xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" 
    displayBlock="true"
    xmlns:l="sap.ui.layout">

        <Panel headerText="{i18n>helloPanel}" class="sapUiResponsiveMargin" width="auto">
            <content>
                <Button text="{i18n>showHelloButtonText}" press=".onShowHello" class="sapUiLargeMarginEnd"/>
                <Input value="{/recipient/name}"
                        valueLiveUpdate="true"
                        width="60%"/>
                <Text text="Hello {/recipient/name}" class="sapUiSmallMargin boldElements" />
            </content>
        </Panel>
      
</mvc:View>